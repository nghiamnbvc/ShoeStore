@using System.Globalization

@model Backend.ViewModels.OrderDetailViewModel
@{
    ViewData["Title"] = "Order Details";
    var culture = CultureInfo.GetCultureInfo("vi-VN");
}

<h1 class="mt-4">Order Details</h1>

<div class="card mb-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Order ID</dt>
            <dd class="col-sm-9">@Model.OrderId</dd>

            <dt class="col-sm-3">Customer Name</dt>
            <dd class="col-sm-9">@Model.CustomerName</dd>

            <dt class="col-sm-3">Phone Number</dt>
            <dd class="col-sm-9">@Model.CustomerPhone</dd>

            <dt class="col-sm-3">Address</dt>
            <dd class="col-sm-9">@Model.ShippingAddress</dd>

            <dt class="col-sm-3">Order Date</dt>
            <dd class="col-sm-9">@Model.OrderDate?.ToString("yyyy-MM-dd HH:mm")</dd>

            <dt class="col-sm-3">Total Amount</dt>
            <dd class="col-sm-9">@Model.TotalAmount.ToString("C0", culture)</dd>

            <dt class="col-sm-3">Payment Method</dt>
            <dd class="col-sm-9">@Model.PaymentMethod</dd>

            <dt class="col-sm-3">Order Status</dt>
            <dd class="col-sm-9">@Model.Status</dd>
        </dl>
    </div>
</div>

<h4>Products in this Order</h4>
<div class="table-responsive mb-4">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Product</th>
                <th>Variant</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Color - @item.Size</td>
                    <td>@item.Price.ToString("C0", culture)</td>
                    <td>@item.Quantity</td>
                    <td>@((item.Price * item.Quantity).ToString("C0", culture))</td>

                </tr>
            }
        </tbody>
    </table>
</div>

<a asp-action="Index" class="btn btn-secondary">Back to Order List</a>
