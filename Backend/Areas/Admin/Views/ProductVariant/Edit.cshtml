@model Backend.Models.ProductVariant
@{
    ViewData["Title"] = "Edit Product Variant";
}

<h2>Edit Product Variant</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.ProductId)

    <div class="form-group">
        <label asp-for="ColorId" class="control-label"></label>
        <select asp-for="ColorId" class="form-control" asp-items="ViewBag.ColorId"></select>
        <span asp-validation-for="ColorId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SizeId" class="control-label"></label>
        <select asp-for="SizeId" class="form-control" asp-items="ViewBag.SizeId"></select>
        <span asp-validation-for="SizeId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" asp-route-productId="@Model.ProductId" class="btn btn-secondary">Back</a>
</form>
