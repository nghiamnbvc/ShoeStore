@model Backend.Models.ProductVariant
@{
    ViewData["Title"] = "Delete Product Variant";
}

<h2>Delete Product Variant</h2>

<h4>Are you sure you want to delete this variant?</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">Color</dt>
    <dd class="col-sm-10">@Model.Color?.Name</dd>

    <dt class="col-sm-2">Size</dt>
    <dd class="col-sm-10">@Model.Size?.Name</dd>
</dl>

<form asp-action="Delete">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-route-productId="@Model.ProductId" class="btn btn-secondary">Cancel</a>
</form>
