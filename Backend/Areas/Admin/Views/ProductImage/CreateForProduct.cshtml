@model Backend.Models.ProductImage

@{
    ViewData["Title"] = "Add Main Product Image";
}

<h2>Add Main Product Image</h2>

<form asp-action="CreateForProduct" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="ProductId" />

    <div class="form-group">
        <label asp-for="ImageFile" class="control-label"></label>
        <input asp-for="ImageFile" class="form-control" type="file" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Upload</button>
</form>

@if (!string.IsNullOrEmpty(Model?.ImageUrl))
{

    <div class="mt-3">
        <h4>Current Image</h4>
        <img src="@Url.Content(Model.ImageUrl)" alt="Product Image" style="max-width:200px; height:auto;" />

        <form asp-action="Delete" method="post" class="mt-2">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger">Delete Image</button>
        </form>
    </div>
}

<a asp-controller="Product" asp-action="Index" class="btn btn-secondary mt-2">Back to Product List</a>
