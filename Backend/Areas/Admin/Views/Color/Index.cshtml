@model IEnumerable<Backend.Models.Color>
@{
    ViewData["Title"] = "Color List";
    int index = 1;
}

<h1 class="mt-4">Colors List</h1>

<a asp-action="Create" class="btn btn-success mb-3"><i class="fas fa-plus"></i> Add Color</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>No.</th>
            <th>Color Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var color in Model)
        {
            <tr>
                <td>@index</td>
                <td>@color.Name
                    <div style="width: 20px; height: 20px; background-color: @color.HexCode; border-radius:50%;padding: 0;border: none;"
                        title="@color.HexCode"></div>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@color.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@color.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
            index++;
        }
    </tbody>
</table>
