@model Backend.Models.Color
@{
    ViewData["Title"] = "Delete Color";
}

<h1>Delete Color</h1>

<h4>Are you sure you want to delete this color?</h4>
<div>
    <strong>Color:</strong> @Model.Name
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger mt-3">Confirm delete</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>
