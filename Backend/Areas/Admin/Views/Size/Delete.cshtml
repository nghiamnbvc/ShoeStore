@model Backend.Models.Size
@{
    ViewData["Title"] = "Delete Size";
}

<h1>Delete Size</h1>

<h4>Are you sure you want to delete this size?</h4>
<div>
    <strong>Size:</strong> @Model.Name
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger mt-3">Confirm delete</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>
