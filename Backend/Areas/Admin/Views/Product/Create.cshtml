@model Backend.Models.Product
@{
    ViewData["title"] = "Create Product";
}

<h1 class="mt-4">Add Product</h1>
<hr />

<form asp-area="Admin" asp-controller="Product" asp-action="Create" method="post" enctype="multipart/form-data">

    @Html.AntiForgeryToken()


    <div class="form-group mb-2">
        <label asp-for="Name" class="control-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Description" class="control-label">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Price" class="control-label">Price</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="CategoryId" class="control-label">Category</label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control">
            <option value="">Choose a Category</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="BrandId" class="control-label">Brand</label>
        <select asp-for="BrandId" asp-items="ViewBag.Brands" class="form-control">
            <option value="">Choose a Brand</option>
        </select>
        <span asp-validation-for="BrandId" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="DiscountPercent" class="control-label">Discount (%)</label>
        <input asp-for="DiscountPercent" class="form-control" />
        <span asp-validation-for="DiscountPercent" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Gender" class="control-label">Gender</label>
        <select asp-for="Gender" class="form-control">
            <option value="">-- Choose --</option>
            <option value="Men">Men</option>
            <option value="Women">Women</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="form-check mb-2">
        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
        <label asp-for="IsActive" class="form-check-label"></label>
    </div>


    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
